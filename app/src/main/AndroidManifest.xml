<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rindou11.textviewactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TextViewActivity"
            android:label="Text View Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextViewImageActivity"
            android:label="Image View Activity">
            <intent-filter>
                <action android:name="android.intent.action.IMAGELAUNCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.IMAGEACTIVITY"/>
            </intent-filter>
        </activity>
    </application>

</manifest>